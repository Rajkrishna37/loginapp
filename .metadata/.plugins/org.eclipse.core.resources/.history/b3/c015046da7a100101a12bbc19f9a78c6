package com.loginapp1;

import javax.swing.*;
import java.awt.*;
import java.io.*;
import java.sql.*;

public class UserHomePanel extends JPanel {

    private String username;
    private JPanel contentPanel;

    public UserHomePanel(String username) {
        this.username = username;
        setLayout(new BorderLayout());

        JLabel header = new JLabel("🏠 Welcome, " + username, SwingConstants.CENTER);
        header.setFont(new Font("Serif", Font.BOLD, 28));
        add(header, BorderLayout.NORTH);

        contentPanel = new JPanel();
        contentPanel.setLayout(new BoxLayout(contentPanel, BoxLayout.Y_AXIS));
        JScrollPane scrollPane = new JScrollPane(contentPanel);
        add(scrollPane, BorderLayout.CENTER);

        loadUserData();
    }

    private void loadUserData() {
        contentPanel.removeAll();

        try (Connection conn = DriverManager.getConnection(
                "jdbc:mysql://localhost:3306/loginapp", "root", "root")) {

            // Fetch user ID
            PreparedStatement ps = conn.prepareStatement("SELECT id FROM users WHERE username=?");
            ps.setString(1, username);
            ResultSet rs = ps.executeQuery();

            int userId = 0;
            if (rs.next()) userId = rs.getInt("id");

            // Skills
            ps = conn.prepareStatement("SELECT skill_name FROM user_skills WHERE user_id=?");
            ps.setInt(1, userId);
            rs = ps.executeQuery();

            StringBuilder sb = new StringBuilder("🎯 Your Skills:\n");
            while (rs.next()) {
                sb.append(" • ").append(rs.getString("skill_name")).append("\n");
            }
            JTextArea skillsArea = new JTextArea(sb.toString());
            skillsArea.setEditable(false);
            contentPanel.add(skillsArea);

            // Certificates
            ps = conn.prepareStatement("SELECT cert_id, cert_name, cert_file FROM user_certificates WHERE user_id=?");
            ps.setInt(1, userId);
            rs = ps.executeQuery();

            while (rs.next()) {
                int certId = rs.getInt("cert_id");
                String certName = rs.getString("cert_name");
                byte[] certFile = rs.getBytes("cert_file");

                JPanel certPanel = new JPanel(new FlowLayout(FlowLayout.LEFT));
                JLabel certLabel = new JLabel("Certificate: " + certName);
                JButton showBtn = new JButton("Show");

                showBtn.addActionListener(e -> {
                    try {
                        File tempFile = File.createTempFile("certificate_" + certId, ".pdf");
                        try (FileOutputStream fos = new FileOutputStream(tempFile)) {
                            fos.write(certFile);
                        }
                        if (Desktop.isDesktopSupported()) {
                            Desktop.getDesktop().open(tempFile);
                        }
                    } catch (IOException ex) {
                        JOptionPane.showMessageDialog(this, "Error opening certificate: " + ex.getMessage());
                    }
                });

                certPanel.add(certLabel);
                certPanel.add(showBtn);
                contentPanel.add(certPanel);
            }

            contentPanel.revalidate();
            contentPanel.repaint();

        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, "Database Error: " + e.getMessage());
        }
    }
}
